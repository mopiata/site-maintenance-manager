{{#partial "content"}}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-inverse engineerprofile" style="background-color: #333; border-color: #333;">
                    <div class="card-block">
                        <div class="row">
                            {{#if engineer}}
                                <div class="col-md-4 col-sm-4">
                                    <h2 class="card-title">Name: {{engineer.name}}</h2>
                                    <p class="card-text"><strong>Staff Number: </strong> {{engineer.ekNumber}} </p>
                                    <p class="card-text"><strong>Skills: </strong> Site Engineer </p>
                                    <p><strong>Platform: </strong>
                                        <span class="badge bg-primary">WordPress</span>
                                        <span class="badge bg-info">Weebly</span>
                                        <span class="badge bg-warning">Bootstrap</span>
                                        <span class="badge bg-success">Wix</span>
                                    </p>
                                </div>
                                <div class="col-md-4 col-sm-4 text-center">
                                    <img class="btn-md" src="/images/users.png" alt="" style="border-radius:50%;">
                                </div>
                                <div class="col-md-4 col-sm-4 text-center">

                                </div>
                                <div class="col-md-4 col-sm-4 text-center">
                                    <a class="btn btn-primary btn-block btn-md" href="/engineers/{{engineer.id}}/update"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Update  </a>
                                </div>
                                <div class="col-md-4 col-sm-4 text-center">
                                    <a class="btn btn-danger btn-block btn-md" href="/engineers/{{engineer.id}}/delete" ><span class="fa fa-google-plus-square"></span> Delete </a>
                                </div>
                                <div class="col-md-4 col-sm-4 text-center">
                                </div>
                            {{else}}
                                <h1>No such engineer!</h1>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}

{{>layout.hbs}}