{{#partial "content"}}

    <div class="container">
        <h1>Add A Site</h1>
        <form action="/sites/new" method="post">
            <div class="form-group">
                <label for="name">Site Name</label>
                <input class="form-control form-control-lg" id="name" name="name" type="text" placeholder="Site Name">
            </div>
            <div class="form-group">
                <label for="location">Site Location</label>
                <input class="form-control" id="location" name="location" type="text" placeholder="Site Location">
            </div>
            <div class="form-group">
                <label for="engineer">Engineer</label>
                <select class="form-control" name="engineer" id="engineer">
                    {{#if engineers}}
                        {{#each engineers}}
                            <option value="{{id}}">EK{{ekNumber}}   {{name}}</option>
                        {{/each}}
                    {{else}}
                        <p>No engineers</p>
                    {{/if}}
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Go!</button>
        </form>
    </div>
    <br> <br>
    <div class="container">
        <h1>Sites</h1>
        <table class="table table-striped" style="max-width: 90%; margin-left: auto; margin-right: auto;">
            <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Engineer In Charge</th>
            </tr>
            </thead>
            <tbody>

            {{#if sites}}
                {{#each sites}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{location}}</td>
                        <td>{{engineerId}}</td>
                    </tr>
                {{/each}}

            {{else}}
                <tr>
                    <td>No Data</td>
                    <td>No Data</td>
                    <td>No Data</td>
                </tr>
            {{/if}}

            </tbody>
        </table>
    </div>
{{/partial}}

{{>layout.hbs}}
