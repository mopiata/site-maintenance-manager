{{#partial "content"}}

    <div class="container">
        <h1>Add A Site</h1>
        <form>
            <div class="form-group">
                <label for="name">Site Name</label>
                <input class="form-control form-control-lg" id="name" name="name" type="text" placeholder="Engineer's Name">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="location">Site Location</label>
                <input class="form-control" id="location" name="location" type="number" placeholder="Engineer's EK Number">
            </div>
            <div class="form-group">
                <label for="engineer">Engineer</label>
                <input class="form-control" name="engineer" id="engineer" type="number" placeholder="Engineer's Phone Number">
            </div>
            <button type="submit" class="btn btn-primary">Go!</button>
        </form>
    </div>
    <br> <br>
    <div class="container">
        <h1>Sites</h1>
    </div>
{{/partial}}

{{>layout.hbs}}
