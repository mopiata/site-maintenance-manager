{{#partial "content"}}

    <div class="container">
        <h1>Add A Site</h1>
        <form>
            <div class="form-group">
                <label for="name">Site Name</label>
                <input class="form-control form-control-lg" id="name" name="name" type="text" placeholder="Site Name">
            </div>
            <div class="form-group">
                <label for="location">Site Location</label>
                <input class="form-control" id="location" name="location" type="number" placeholder="Site Location">
            </div>
            <div class="form-group">
                <label for="engineer">Engineer</label>
                <input class="form-control" name="engineer" id="engineer" type="number" placeholder="Site Engineer">
            </div>
            <button type="submit" class="btn btn-primary">Go!</button>
        </form>
    </div>
    <br> <br>
    <div class="container">
        <h1>Sites</h1>
    </div>
{{/partial}}

{{>layout.hbs}}
